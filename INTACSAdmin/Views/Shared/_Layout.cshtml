<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - INTACS Admin</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/IntacsNew.png" alt="INTACS Logo" style="height: 40px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between px-4">
                    <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-light d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door-fill"></i> Home
                                </a>
                            </li>
                    </ul>
                    <ul class="navbar-nav d-flex align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="membersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-people-fill me-1"></i> Members
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="membersDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Index"><i class="bi bi-people me-1"></i> Clients</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="List"><i class="bi bi-person-lines-fill me-1"></i> Users</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="maintenanceDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-tools me-1"></i> Maintenance
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="maintenanceDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="BusinessContinuityPlan" asp-action="Index"><i class="bi bi-file-earmark-text me-1"></i> Business Continuity Plan</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="DisasterRecoveryPlan" asp-action="Index"><i class="bi bi-file-earmark-excel me-1"></i> Disaster Recovery Plan</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="logsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-journal-text me-1"></i> Logs
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="logsDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="UserLogs" asp-action="Index"><i class="bi bi-person-badge me-1"></i> User Logs</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="ErrorLogs" asp-action="Index"><i class="bi bi-exclamation-triangle me-1"></i> Error Logs</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="utilitiesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-tools me-1"></i> Utilities
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="utilitiesDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="WebAPI" asp-action="Index"><i class="bi bi-cloud-arrow-up me-1"></i> Web API</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="FlowChartSymbol" asp-action="Index"><i class="bi bi-diagram-3 me-1"></i> Flow Chart Symbol</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Survey" asp-action="Index"><i class="bi bi-card-checklist me-1"></i> Survey</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="DemoRequests" asp-action="Index"><i class="bi bi-clipboard-data me-1"></i> Demo Requests</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="QMSClauses" asp-action="Index"><i class="bi bi-journal-bookmark me-1"></i> QMS Clauses</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="NewFeatures" asp-action="Index"><i class="bi bi-stars me-1"></i> New Features</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="RunSQLMultipleDatabases" asp-action="Index"><i class="bi bi-server me-1"></i> Run SQL Multiple Databases</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown me-3">
                                    <a class="nav-link dropdown-toggle text-light d-flex align-items-center gap-2" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item d-flex align-items-center gap-2" asp-area="" asp-controller="Users" asp-action="List"><i class="bi bi-people-fill"></i> User List</a></li>
                                    <li><a class="dropdown-item d-flex align-items-center gap-2" asp-area="" asp-controller="Users" asp-action="ChangePassword"><i class="bi bi-key-fill"></i> Change Password</a></li>
                                    <li>
                                        <form method="post" asp-controller="Users" asp-action="Logout" class="d-inline m-0 p-0">
                                            <button type="submit" class="dropdown-item d-flex align-items-center gap-2 p-0 m-0"><i class="bi bi-box-arrow-right"></i>Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    <footer class="border-top footer text-muted">
    </footer>
    <div class="container text-center text-muted py-2">
        &copy; 2025 - INTACS Admin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model INTACSAdmin.Models.Client

@{
    ViewData["Title"] = "Create Client";
}

<h1>Create Client</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="ClientId" class="form-label"></label>
                <input asp-for="ClientId" class="form-control" required />
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ClientName" class="form-label"></label>
                <input asp-for="ClientName" class="form-control" required />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label"></label>
                <textarea asp-for="Address" class="form-control" required></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ContactPerson" class="form-label"></label>
                <input asp-for="ContactPerson" class="form-control" required />
                <span asp-validation-for="ContactPerson" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Position" class="form-label"></label>
                <input asp-for="Position" class="form-control" required />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="MobileNo" class="form-label"></label>
                <input asp-for="MobileNo" class="form-control" required />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ExpDate" class="form-label"></label>
                <input asp-for="ExpDate" type="date" class="form-control" />
                <span asp-validation-for="ExpDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UserLicense" class="form-label"></label>
                <input asp-for="UserLicense" type="number" class="form-control" />
                <span asp-validation-for="UserLicense" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UserAttendance" class="form-label"></label>
                <input asp-for="UserAttendance" type="number" class="form-control" />
                <span asp-validation-for="UserAttendance" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="UserPOS" class="form-label"></label>
                <input asp-for="UserPOS" type="number" class="form-control" />
                <span asp-validation-for="UserPOS" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Entity" class="form-label"></label>
                <input asp-for="Entity" type="number" class="form-control" />
                <span asp-validation-for="Entity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Website" class="form-label"></label>
                <input asp-for="Website" class="form-control" />
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MainBusiness" class="form-label"></label>
                <textarea asp-for="MainBusiness" class="form-control"></textarea>
                <span asp-validation-for="MainBusiness" class="text-danger"></span>
            </div>
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <label asp-for="PasswordExpirationPolicy" class="form-label"></label>
        <input asp-for="PasswordExpirationPolicy" type="number" class="form-control" />
        <span asp-validation-for="PasswordExpirationPolicy" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Active" class="form-label"></label>
        <input asp-for="Active" type="checkbox" class="form-check-input" />
        <span asp-validation-for="Active" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
